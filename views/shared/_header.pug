mixin header
    header(id="header" class="container-fluid")
        div(class="logo")
            h1
                a(href="/")
                    | PORTOFOLIO DEMO VERSION 1.0.0
        div(class="down-angle")
            <i class="fa fa-angle-down fa-3x bounce" aria-hidden="true"></i>
        nav(class="navigation fixed-field")
            div(class="row")
                div(class="col-sm-2")
                    div(class="nav-controller")
                        a(href="/")
                            | HOME
                div(class="col-sm-2")
                    div(class="nav-controller")
                        a(href="/portfolio")
                            | PORTFOLIO
                div(class="col-sm-2")
                    div(class="nav-controller")
                        a(href="about")
                            | ABOUT US
                div(class="col-sm-2")
                    div(class="nav-controller")
                        a(href="contact")
                            | CONTACT US
                div(class="col-sm-4")
                    div(class="nav-controller")
                        i(id="search-icon" class="fa fa-search fa-lg" aria-hidden="true")
                        div(id="searchbox-container" class="searchbox-container-hd")
                            form(class="searchbox-hd")
                                input(class="searchbox-input-hd" placeholder="Search" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search'")